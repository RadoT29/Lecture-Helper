<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #17AEDA;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.app.controllers.AdminPasswordController">
<stylesheets>
    <URL value="@styles/splashScene.css" />
    <URL value="@styles/svgIcons.css" />
</stylesheets>
<Button fx:id="logoTUD" maxHeight="192.0" maxWidth="192.0" minHeight="192.0" minWidth="192.0" prefHeight="192.0" prefWidth="192.0">
    <VBox.margin>
        <Insets bottom="106.0" />
    </VBox.margin></Button>
<VBox maxHeight="220.0" maxWidth="605.0" minHeight="220.0" minWidth="605.0" prefHeight="220.0" prefWidth="605.0">
    <Label text="Enter the admin password">
        <font>
            <Font name="Roboto" size="16.0" />
        </font></Label>
    <HBox maxHeight="50.0" maxWidth="605.0" minHeight="50.0" minWidth="605.0" prefHeight="50.0" prefWidth="605.0">
        <TextField fx:id="passwordBox" maxHeight="50.0" maxWidth="410.0" minHeight="50.0" minWidth="410.0" onAction="#checkPassword" prefHeight="50.0" prefWidth="410.0" promptText="Insert Password here">
            <HBox.margin>
                <Insets right="45.0" />
            </HBox.margin></TextField>
        <Button fx:id="sendPassword" maxHeight="50.0" maxWidth="150.0" minHeight="50.0" minWidth="150.0" onAction="#checkPassword" prefHeight="50.0" prefWidth="150.0" style="-fx-background-radius: 5em;" text="Enter" textFill="WHITE">
            <font>
                <Font name="Roboto" size="16.0" />
            </font></Button>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </HBox>
    <Label fx:id="invalidPassword" text="Please insert the password!" visible="false">
        <font>
            <Font name="System Bold Italic" size="12.0" />
        </font>
        <VBox.margin>
            <Insets left="5.0" top="5.0" />
        </VBox.margin>
    </Label>
</VBox>
</VBox>

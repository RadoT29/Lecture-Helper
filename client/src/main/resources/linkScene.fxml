<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="152.0" prefWidth="459.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.app.controllers.LinkController">
   <children>
      <Label text="Room Links">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </Label>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <left>
            <Label fx:id="abc" alignment="CENTER" contentDisplay="CENTER" text="Student Link" BorderPane.alignment="CENTER" />
         </left>
         <center>
            <TextField fx:id="linkStudentBox" editable="false" text="link not loaded" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="25.0" />
               </BorderPane.margin>
            </TextField>
         </center>
         <right>
            <Button fx:id="studentCopyButton" mnemonicParsing="false" onAction="#studentCopyLink" text="Copy Link" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <TextField fx:id="linkModeratorBox" editable="false" text="link not loaded" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets left="9.0" />
               </BorderPane.margin>
            </TextField>
         </center>
         <left>
            <Label text="Moderator Link" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <Button fx:id="moderatorCopyButton" mnemonicParsing="false" onAction="#moderatorCopyLink" text="Copy Link" BorderPane.alignment="CENTER" />
         </right>
      </BorderPane>
   </children>
   <padding>
      <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
   </padding>
</VBox>

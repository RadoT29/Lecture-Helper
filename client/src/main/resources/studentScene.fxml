<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="nl.tudelft.oopp.app.controllers.HomeSceneController">
    <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refresh" text="Refresh" />
    <ScrollPane fx:id="scrollPane" prefHeight="414.0" prefWidth="1200.0">
        <content>
            <VBox fx:id="questionBox" maxHeight="1.7976931348623157E308" prefHeight="350.0" prefWidth="1100.0" />
        </content>
    </ScrollPane>
    <Label prefWidth="175.0" text="Welcome to the student display.">
      <VBox.margin>
         <Insets left="62.5" top="100.0" />
      </VBox.margin></Label>
   <TextField fx:id="questionInput" prefWidth="231.0" promptText="Write your question here">
      <font>
         <Font name="System Italic" size="12.0" />
      </font>
   </TextField>
   <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendQuestion" text="Send" />
</VBox>
